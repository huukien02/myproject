    <form action="/edit/products" method="post">
        <input type="hidden" name="id" value="<%=data[0].id%>" ><br><br>
        <p>Name</p>
        <input type="text" name="name" value="<%=data[0].name%>"><br/><br/>
        <p>Image</p>
        <input type="text" name="image" value="<%=data[0].image%>"><br/><br/>
        <p>Price</p>
        <input type="text" name="price" value="<%=data[0].price%>"><br/><br/>
        <p>Detail</p>
        <input type="text" name="moTa" value="<%=data[0].moTa%>"><br><br><br/><br/>
        <input type="submit" value="Update" name="" id="submit"><br><br>
    </form>

    <div class="footer">
        <div class="footer-head">
            <ul>
                <li>
                    <i class="fa-solid fa-trophy fa-2x"></i>
