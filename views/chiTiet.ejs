        <div>
           <div class="detail">
            <img src="<%=data[0].image%>" alt="">
            <p><%=data[0].name%></p>
            <p>Giá: $<%=data[0].price%> </p>
            <p><%=data[0].moTa%></p>
        </div> <br><br><br>

        <form action="" method="post">
            <input type="hidden" name="name" value="<%=name%>"> <br>
            <input type="hidden" name="idSP" value="<%=data[0].id%>"><br>
            <input style="width:400px ;" type="hidden" name="date" id="date"> <br>
               <strong id="name"><%=name%>:</strong>
            <input id="cmt" type="text" name="cmt" placeholder="Nhận xét của bạn ..">
            <input id="submit" type="submit" value="Gửi">
         </form>
        </div>
        <% for(let i = 0;i<data1.length;i++){%> 
            <p class="detail-cmt">
                <strong><%=data1[i].name%></strong>: 
                <span><%=data1[i].cmt%></span>
                <small>
                    
                      (<%= JSON.parse(data1[i].date).month %>/<%= JSON.parse(data1[i].date).day %>/<%= JSON.parse(data1[i].date).year %> - 
                      <%= JSON.parse(data1[i].date).hour %>:<%= JSON.parse(data1[i].date).minute %>)
                </small> 
                <small><a href="/delete/cmt/<%=data1[i].id%>"><i class="fa-solid fa-trash-can"></i></a></small>
            </p>
         <%}%>

        <div class="footer">
            <div class="footer-head">
                <ul>
                    <li>
                        <i class="fa-solid fa-trophy fa-2x"></i>
                        <p>
                            <small style="margin-left:20px ;">Sản phẩm</small><br>
                           <strong style="font-size: 15px ; margin-left: 5px;">CHÍNH HÃNG</strong>
                        </p>
                   </li>
                    <li>
                        <i class="fa-solid fa-taxi fa-2x"></i>
                        <p>
                           <small style="margin-left:10px;">Giao hàng tận nơi</small><br>
